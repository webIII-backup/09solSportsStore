@model SportsStore.Models.ProductViewModels.EditViewModel

@{
    ViewData["Title"] = (bool)ViewData["IsEdit"] ? "Edit Product" : "Create Product";
}

<h2>@ViewData["Title"]</h2>

<hr />

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="InStock"></label>
        <input asp-for="InStock" />
    </div>
    <div class="form-group">
        <label asp-for="Availability"></label>
        <select asp-for="Availability" asp-items="Html.GetEnumSelectList<Availability>()" class="form-control">
            <option value="">-- select availability --</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="@(ViewData["Categories"] as SelectList)" class="form-control">
            <option value="">-- select category --</option>
        </select>
    </div>
    <div>
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
</form>

<p></p>